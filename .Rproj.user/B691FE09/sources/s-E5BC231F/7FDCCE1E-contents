area<-as.data.frame(xtabs(forrest_fire_area_$AREA_HA ~ forrest_fire_area_$SEASON, df))
plot(area)

FFA<-forrest_fire_area_
FFA
plot(FFA)
summary(FFA)
hist(FFA$AREA_HA)
FFAH <- FFA$AREA_HA
FFAH
summary(FFAH)

library(fitdistrplus)
plotdist(FFA$AREA_HA, histo = TRUE, demp = TRUE)
descdist(FFA$AREA_HA, boot = 1000)
fw <- fitdist(FFAH[FFAH != 0], "weibull")
summary(fw)
fg <- fitdist(FFAH[FFAH != 0], "gamma")
summary(fg)
fln <- fitdist(FFAH[FFAH != 0], "lnorm")
summary(fln)

par(mfrow = c(2, 2))
plot.legend <- c("Weibull", "lognormal", "gamma")
denscomp(list(fw, fln, fg), legendtext = plot.legend)
qqcomp(list(fw, fln, fg), legendtext = plot.legend)
cdfcomp(list(fw, fln, fg), legendtext = plot.legend)
ppcomp(list(fw, fln, fg), legendtext = plot.legend)
library(actuar)
par(mfrow = c(1,1))
cdfcomp(list(fln, fg, fw), xlogscale = TRUE, ylogscale = TRUE, 
        legendtext = c("lognormal", "gamma", "Weibull"))

library(DescTools)

FFAMax <- max(FFAH)
GM<-Gmean(FFAH, method = "classic")

Gsd(FFAH, na.rm = FALSE)

log(FFAMax) #ln max value
GM
log(GM) #ln geometric mean

