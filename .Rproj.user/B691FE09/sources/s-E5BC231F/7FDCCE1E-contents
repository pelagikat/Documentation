FFY <- c(1939, 1962, 1963, 1967, 1984, 1998, 2003, 2009, 2011)
plot(FFY)
hist(FFY)
library(fitdistrplus)
plotdist(FFY, histo = TRUE, demp = TRUE)
descdist(FFY, boot = 1000)
fw <- fitdist(FFY, "weibull")
summary(fw)
fg <- fitdist(FFY, "gamma")
summary(fg)
fln <- fitdist(FFY, "lnorm")
summary(fln)
fu <- fitdist(FFY, "unif")
summary(fu)

par(mfrow = c(2, 2))
plot.legend <- c("Weibull", "lognormal", "gamma", "uniform")
denscomp(list(fw, fln, fg, fu), legendtext = plot.legend)
qqcomp(list(fw, fln, fg, fu), legendtext = plot.legend)
cdfcomp(list(fw, fln, fg, fu), legendtext = plot.legend)
ppcomp(list(fw, fln, fg, fu), legendtext = plot.legend)
library(actuar)
par(mfrow = c(1,1))
cdfcomp(list(fln, fg, fw, fu), xlogscale = TRUE, ylogscale = TRUE, 
        legendtext = c("lognormal", "gamma", "Weibull", "uniform"))


