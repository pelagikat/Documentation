	urldate = {2021-06-30},
	journal = {Ecology and Evolution},
	author = {Trauernicht, Clay and Brook, Barry W. and Murphy, Brett P. and Williamson, Grant J. and Bowman, David M. J. S.},
	month = may,
	year = {2015},
	keywords = {fire ecology, Coupled human and natural systems, heterogeneity, indigenous burning, landscape burning, patch mosaic burning, pyrodiversity},
