	urldate = {2021-08-25},
	journal = {Ecology},
	author = {Crystal-Ornelas, Robert and Lockwood, Julie L.},
	month = aug,
	year = {2020},
	keywords = {invasive species, cumulative meta-analysis, decline effect, evidence synthesis, species richness, stability, sufficiency},
